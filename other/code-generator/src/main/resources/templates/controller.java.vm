package ${package.Controller};

import ${package.Service}.${table.serviceName};
import ${package.Entity}.${entity};
    #if(${restControllerStyle})
import com.baomidou.mybatisplus.core.conditions.query.LambdaQueryWrapper;
import org.springframework.web.bind.annotation.RestController;
#else
import org.springframework.stereotype.Controller;
#end
#if(${superControllerClassPackage})
import ${superControllerClassPackage};
#end
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.validation.annotation.Validated;
import org.apache.commons.lang3.StringUtils;

import com.kewen.framework.auth.core.annotation.AuthMenu;
import com.kewen.framework.basic.model.*;
import com.kewen.framework.basic.support.utils.PageUtil;

#if(${swagger})
import io.swagger.annotations.Api;
import io.swagger.annotations.ApiOperation;
#end
import javax.validation.constraints.NotNull;
import java.util.List;


/**
 * $!{table.comment} 接口
 *
 * @author ${author}
 * @since ${date}
 */
#if(${swagger})
@Api(value = "$!{table.comment}", tags = { "$!{table.comment}" })
#end
#if(${restControllerStyle})
@RestController
#else
@Controller
#end
@AuthMenu(name = "$!{table.comment}")
@RequestMapping("/mp#if(${package.ModuleName})/${package.ModuleName}#end/#if(${controllerMappingHyphenStyle})${controllerMappingHyphen}#else${table.entityPath}#end")
#if(${kotlin})
class ${table.controllerName}#if(${superControllerClass}) : ${superControllerClass}()#end

#else
#if(${superControllerClass})
public class ${table.controllerName} extends ${superControllerClass} {
#else
public class ${table.controllerName} {
#end

    @Autowired
    ${table.serviceName} ${table.entityPath}Service;




    #if(${swagger})
    @ApiOperation(value = "添加", notes = "")
    #end
    @PostMapping("/add")
    public Result add(@RequestBody ${entity} entity){

        ${table.entityPath}Service.save(entity);

        return Result.success();
    }

    #if(${swagger})
    @ApiOperation(value = "根据id修改", notes = "")
    #end
    @PostMapping("/updateById")
    public Result updateById(@RequestBody ${entity} entity){

        ${table.entityPath}Service.updateById(entity);

        return Result.success();
    }

    #if(${swagger})
    @ApiOperation(value = "删除", notes = "")
    #end
    @PostMapping(value = "/deleteById")
    public Result deleteById(@RequestBody @Validated IdReq req ) {

        ${table.entityPath}Service.removeById(req.getId());

        return Result.success();
    }

    #if(${swagger})
    @ApiOperation(value = "批量删除", notes = "")
    #end
    @PostMapping("/deleteBatchByIds")
    public Result deleteBatch(@Validated @RequestBody IdsReq req ) {
        ${table.entityPath}Service.removeBatchByIds(req.getIds());
        return Result.success();
    }

    #if(${swagger})
    @ApiOperation(value = "根据id查询", notes = "")
    #end
    @GetMapping(value = "/getById")
    public Result findById(@NotNull @RequestParam("id") Long id) {

        ${entity} entity = ${table.entityPath}Service.getById(id);
        return Result.success(entity);
    }

    #if(${swagger})
    @ApiOperation(value = "分页查询", notes = "")
    #end
    @GetMapping("/page")
    public Result<PageResult<${entity}>> page(@Validated PageReq pageReq,${entity} entity) {
        PageResult<${entity}> pageResult = PageUtil.page(
            pageReq,
            ${table.entityPath}Service,
            wrapper(entity)
        );
        return Result.success(pageResult);
    }

    #if(${swagger})
    @ApiOperation(value = "列表查询", notes = "")
    #end
    @GetMapping(value = "/list")
    public Result<List<${entity}>> list(${entity} entity) {
        List<${entity}> list = ${table.entityPath}Service.list(
                wrapper(entity)
        );
        return Result.success(list);
    }
     /**
     *  组装统一定义查询条件
     * @param entity
     * @return
     */
    private LambdaQueryWrapper<${entity}> wrapper(${entity} entity){
        return new LambdaQueryWrapper<${entity}>()
            //需要添加条件查询就在这里添加
        #foreach($field in ${table.fields})
            #set($fieldUpperFirst=$field.propertyName.substring(0,1).toUpperCase() + ${field.propertyName.substring(1)})
            #if("$field.keyFlag"==true)
                    .eq(entity.get${fieldUpperFirst}() !=null,${entity}::get$fieldUpperFirst,entity.get${fieldUpperFirst}())
            #elseif("$field.columnType.type"=="String")
                    .like(StringUtils.isNotBlank(entity.get${fieldUpperFirst}()),${entity}::get$fieldUpperFirst,entity.get${fieldUpperFirst}())
            #else
                    .eq(entity.get${fieldUpperFirst}() !=null,${entity}::get$fieldUpperFirst,entity.get${fieldUpperFirst}())
            #end
            #if ("$field.propertyName" == "$orderByDescProperty")
                    .orderByDesc(${entity}::get${fieldUpperFirst})
            #end
        #end
        ;
    }

}
#end
