import javax.validation.constraints.NotNull;
import java.util.List;


/**
 * <p>
 * $!{table.comment} 前端控制器
 * </p>
 *
 * @author ${author}
 * @since ${date}
 */
#if(${swagger})
@Api(value = "$!{table.comment}", tags = { "$!{table.comment}" })
#end
#if(${restControllerStyle})
@RestController
#else
@Controller
#end
@RequestMapping("#if(${package.ModuleName})/${package.ModuleName}#end/#if(${controllerMappingHyphenStyle})${controllerMappingHyphen}#else${table.entityPath}#end")
#if(${kotlin})
class ${table.controllerName}#if(${superControllerClass}) : ${superControllerClass}()#end

#else
#if(${superControllerClass})
public class ${table.controllerName} extends ${superControllerClass} {
#else
public class ${table.controllerName} {
#end

    @Autowired
    ${table.serviceName} ${table.entityPath}Service;




    #if(${swagger})
    @ApiOperation(value = "添加", notes = "")
    #end
    @PostMapping("/save")
    public Result save(@RequestBody ${entity} entity){

        ${table.entityPath}Service.save(entity);

        return Result.success();
    }

    #if(${swagger})
    @ApiOperation(value = "根据id修改", notes = "")
    #end
    @PostMapping("/updateById")
    public Result updateById(@RequestBody ${entity} entity){

        ${table.entityPath}Service.updateById(entity);

        return Result.success();
    }

    #if(${swagger})
    @ApiOperation(value = "删除", notes = "")
    #end
    @PostMapping(value = "/delete")
    public Result delete(@NotNull @RequestParam("id") Integer id) {

        ${table.entityPath}Service.removeById(id);

        return Result.success();
    }

    #if(${swagger})
    @ApiOperation(value = "根据id查询", notes = "")
    #end
    @GetMapping(value = "/getById")
    public Result findById(@NotNull @RequestParam("id") Integer id) {

        ${entity} entity = ${table.entityPath}Service.getById(id);
        return Result.success(entity);
    }

    #if(${swagger})
    @ApiOperation(value = "分页查询", notes = "")
    #end
    @GetMapping(value = "/page")
    public Result pageQuery(@Validated @ModelAttribute PageReq pageReq,
            @ModelAttribute ${entity} model) {
        LambdaQueryWrapper<${entity}> wrapper = new LambdaQueryWrapper<>(model);
        Page<${entity}> page = ${table.entityPath}Service.page(new Page<>(pageReq.getPage(),pageReq.getSize()), wrapper);
        return Result.success(page);
    }

    #if(${swagger})
    @ApiOperation(value = "列表查询", notes = "")
    #end
    @GetMapping(value = "/list")
    public Result findList(@ModelAttribute ${entity} model) {

        LambdaQueryWrapper<${entity}> wrapper = new LambdaQueryWrapper<>(model);
        List<${entity}> list = ${table.entityPath}Service.list(wrapper);
        return Result.success(list);
    }

}
#end
