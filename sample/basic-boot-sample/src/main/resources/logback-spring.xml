<configuration>
    <springProperty scope="context" name="app_name" source="spring.application.name" />
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>
    <jmxConfigurator/>
    <springProperty name="logging.path" source="logging.file.path" defaultValue="./logs"/>
    <springProperty name="logging.name" source="logging.file.name" defaultValue="logback"/>

    <!--每天生成一个日志文件，保存30天的日志文件。rollingFile用来切分文件的 -->
    <appender name="rollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logging.path}/${logging.name}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${logging.path}/${logging.name}-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <!-- 保存30天的日志文件 -->
            <maxHistory>30</maxHistory>
            <!-- 日志文件的最大大小 -->
            <MaxFileSize>10MB</MaxFileSize>
            <!-- 超出删除老文件 -->
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd} %d{HH:mm:ss.SSS} %X{traceId} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 日志输出级别 -->
    <root level="INFO">
        <appender-ref ref="rollingFile"/>
    </root>
</configuration>